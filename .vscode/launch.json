    "version": "0.2.0",
    "configurations": [

        {
            "type": "python",
            "request": "attach",
            "name": "Attach to Remote docker",
            "host": "localhost",
            "port": 10004,
            "localRoot": "${workspaceFolder}/src",
            "remoteRoot": "/src/"
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "hydra.api.rest.wsgi.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=10002"
            ],
            "jinja": true
        }
    ]
}